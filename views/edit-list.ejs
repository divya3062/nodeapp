<!DOCTYPE html>
<html lang="en">

<head>
    <title>Fetch using MySQL and Node.js</title>
    <link rel='stylesheet' href='/stylesheets/styletest.css' />
</head>

<body>
    <div class="form-data">
       
        <h3><%= title %></h3>
        
        <form action="/users/update" method="POST">
            <fieldset>
                
                <% if(userData.length!=0){
                    var i=1;
                    userData.forEach(function(data){%>
                    <label>Employee ID</label>
                    <input type="text" id='empID'  name="id"  value="<%=data.id %>" readonly>
                    <br><br>
                    <label>New Name</label>
                    <input type="text" id="name" name="name" required value="<%=data.name %>">
                    <br><br>
                    <label>New Email Address</label>
                    <input type="text" id="email" name="email" required value="<%=data.email %>">
                    <br><br>
                    <button type="reset">Reset</button>
                    <button type="submit">Submit</button>
                    <button type="button" onclick="window.history.back();">Cancel</button>
                    
                    <%  i++; }) %>
                    <% } else{ %>
                            <h3>NO DATA</h3>
                            <% } %>
            </fieldset>                  
            
        </form>
    </div>
</body>

</html>